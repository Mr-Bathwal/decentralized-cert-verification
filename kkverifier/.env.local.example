# ===== BLOCKCHAIN CONFIGURATION =====
# Alchemy RPC for Sepolia Testnet
NEXT_PUBLIC_ALCHEMY_KEY=your_alchemy_api_key_here

# WalletConnect Project ID (Get from https://cloud.walletconnect.com/)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# ===== SMART CONTRACT ADDRESSES (SEPOLIA TESTNET) =====
NEXT_PUBLIC_CERTIFICATE_REGISTRY_ADDRESS=0xYourSepoliaCertificateRegistryAddress

# ===== IPFS STORAGE (PINATA) =====
# Get credentials from https://app.pinata.cloud/
NEXT_PUBLIC_PINATA_API_KEY=your_pinata_api_key_here
PINATA_API_SECRET=your_pinata_secret_key_here
NEXT_PUBLIC_PINATA_GATEWAY=your-gateway.mypinata.cloud

# ===== DATABASE (SUPABASE) =====
# Get credentials from https://app.supabase.com/
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ===== APPLICATION CONFIGURATION =====
NEXT_PUBLIC_APP_NAME=KK Verifier
NEXT_PUBLIC_APP_URL=http://localhost:3002
